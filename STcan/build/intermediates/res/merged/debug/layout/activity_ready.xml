<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <Button
        android:id="@+id/ready_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ready_check" />

    <Button
        android:id="@+id/ready_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ready_start" />

    <Button
        android:id="@+id/ready_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ready_setting" />

    <Button
        android:id="@+id/ready_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ready_finish" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ready_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/ready_test" />
    </LinearLayout>

</LinearLayout>